<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3 style="color: #ff385c;"><center>Create new listing</center></h3>
        <form method="POST" action="/listings" novalidate  class="needs-validation" enctype="multipart/form-data">
            <div>
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" placeholder="Enter title" class="form-control" required />
                <div class="valid-feedback">Title's look good!</div>
            </div>
            <div>   
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" type="text" class="form-control" required ></textarea>
                <div class="invalid-feedback">Enter a short description</div>
            </div>
            <div>
                <label for="image" class="form-label">Upload Image </label>
                <input name="listing[image][url]" type="file" class="form-control" required />
                <div class="invalid-feedback">Enter a valid url</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" type="number" placeholder="1200" class="form-control" required/>
                    <div class="invalid-feedback">Enter a valid price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" type="text" placeholder="India" class="form-control" required/>
                    <div class="invalid-feedback">Enter a country</div>
                </div>
            </div>
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" type="text" placeholder="Jodhpur, Rajasthan" class="form-control" required />
                    <div class="invalid-feedback">Enter a valid location</div>
                </div>
                <br><br>
            <button class="btn btn-dark btn-add">Add</button>
        </form>
    </div>
</div>
